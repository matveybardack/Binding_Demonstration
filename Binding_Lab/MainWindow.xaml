<Window x:Class="Binding_Lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding_Lab"
        xmlns:vm="clr-namespace:Binding_Lab.ViewModels"
        xmlns:tabs="clr-namespace:Binding_Lab.Tabs"
        xmlns:loc="clr-namespace:CodingSeb.Localization.WPF;assembly=CodingSeb.Localization.WPF"
        mc:Ignorable="d"
        Title="{loc:Tr 'MainWindowTitle'}" 
        Height="450" Width="800">
    <Window.Resources>
        <!--Привязка по умолчанию-->
        <DataTemplate DataType="{x:Type vm:DefaultBindingViewModel}">
            <tabs:DefaultBindingTab/>
        </DataTemplate>
        <!--Двухсторонняя привязка-->
        <DataTemplate DataType="{x:Type vm:TwoWaysBindingViewModel}">
            <tabs:TwoWaysBindingTab/>
        </DataTemplate>
        <!--Одноразовая привязка-->
        <DataTemplate DataType="{x:Type vm:OneTimeBindingViewModel}">
            <tabs:OneTimeBindingTab/>
        </DataTemplate>
        <!--Односторонняя привязка-->
        <DataTemplate DataType="{x:Type vm:OneWayBindingViewModel}">
            <tabs:OneWayBindingTab/>
        </DataTemplate>
        <!--Триггеры-->
        <DataTemplate DataType="{x:Type vm:TriggersViewModel}">
            <tabs:TriggersTab/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель смены языка -->
        <Border Grid.Row="0" Padding="10" Background="#F0F0F0" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="524,0,0,0">
                <TextBlock Text="{loc:Tr 'LanguageSelectionHint'}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"/>

                <ComboBox Width="120"
                          ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedLanguage}"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" ItemsSource="{Binding Tabs}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header, UpdateSourceTrigger=PropertyChanged}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ContentViewModel}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
