<UserControl x:Class="Binding_Lab.Tabs.DefaultBindingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Lab.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UniformGrid Margin="10" Rows="4" Columns="4">
        <!--Привязка textbox (TwoWay)-->
        <Label Content="Default TextBox 1:"/>
        <TextBox Text="{Binding DefaultText, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalAlignment="Top"/>
        <Label Content="Log TextBox 1:"/>
        <TextBlock Text="{Binding DefaultText, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalAlignment="Top"/>
        
        <!-- Привязка CheckBox (TwoWay)-->
        <Label Content="DefaultCheckBox:"/>
        <CheckBox IsChecked="{Binding DefaultFlag}" Content="Check me" Margin="5" VerticalAlignment="Top"/>
        <Label Content="Log CheckBox:"/>
        <CheckBox IsChecked="{Binding DefaultFlag}" Content="I`m checked?" Margin="5" VerticalAlignment="Top" IsEnabled="False"/> <!-- Тут Привязка Oneway для демонстрации-->
        
        <!-- Привязка  ProgressBar (OneWay)-->
        <Label Content="DefaultProgressBar:"/>
        <ProgressBar x:Name="DefaultProgressBar" Value="{Binding DefaultProgress}" Height="20" Margin="5" VerticalAlignment="Top"/>
        <Label Content="Log ProgressBar (direct):"/>
        <TextBlock Text="{Binding Value, ElementName=DefaultProgressBar}" Margin="5" VerticalAlignment="Top"/>

        <!--Привязка картинки (OneTime)-->
        <Label Content="DefaultImage:" />
        <Image Source="/Resourse/no_resourse.jpg" Margin="5"/>
    </UniformGrid>
</UserControl>
