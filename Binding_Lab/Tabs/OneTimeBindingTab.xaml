<UserControl x:Class="Binding_Lab.Tabs.OneTimeBindingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Lab.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="OneTime TextBox 1:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="OneTimeTextBox1" 
                 Text="{Binding InitialText, Mode=OneTime}" 
                 Margin="5" Background="LightGray"/>

        <Label Grid.Row="1" Grid.Column="0" Content="OneTime TextBox 2:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="OneTimeTextBox2" 
                 Text="{Binding InitialNumber, Mode=OneTime}" 
                 Margin="5" Background="LightGray"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Label (OneTime):"/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="OneTimeLabel" 
               Content="{Binding InitialText, Mode=OneTime}" 
               Margin="5" BorderBrush="Gray" BorderThickness="1"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                   TextWrapping="Wrap" TextAlignment="Center">
            <Run Text="OneTime: привязка только при инициализации"/><LineBreak/>
            <Run Text="Изменения в VM не отражаются в UI"/><LineBreak/>
            <Run Text="Полезно для статических данных"/>
        </TextBlock>
    </Grid>
</UserControl>
