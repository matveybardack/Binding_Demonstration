<UserControl x:Class="Binding_Lab.Tabs.OneWayBindingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Lab.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Source TextBox (TwoWay):"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="SourceTextBox" 
                 Text="{Binding SourceText, Mode=TwoWay}" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="OneWay TextBox:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="OneWayTextBox" 
                 Text="{Binding SourceText, Mode=OneWay}" 
                 IsReadOnly="True" Margin="5" Background="LightGray"/>

        <Label Grid.Row="2" Grid.Column="0" Content="OneWay Slider:"/>
        <Slider Grid.Row="2" Grid.Column="1" x:Name="OneWaySlider"
                Minimum="0" Maximum="100" Value="{Binding SourceValue, Mode=OneWay}"
                IsEnabled="False" Margin="5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Calculated Text:"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="CalculatedTextBox" 
                 Text="{Binding DisplayText, Mode=OneWay}" 
                 IsReadOnly="True" Margin="5" Background="LightGray"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                   TextWrapping="Wrap" TextAlignment="Center">
            <Run Text="OneWay: только из VM в UI"/><LineBreak/>
            <Run Text="Изменения в UI не передаются в VM"/><LineBreak/>
            <Run Text="Полезно для read-only отображения"/>
        </TextBlock>
    </Grid>
</UserControl>
