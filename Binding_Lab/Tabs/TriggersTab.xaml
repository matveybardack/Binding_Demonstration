<UserControl x:Class="Binding_Lab.Tabs.TriggersTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Lab.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Property Trigger TextBox:"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="PropertyTriggerTextBox" 
                 Text="{Binding TriggerText}" Margin="5">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="Text" Value="ACTIVE">
                            <Setter Property="Background" Value="LightGreen"/>
                            <Setter Property="Foreground" Value="DarkGreen"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter Property="ToolTip" Value="Поле не может быть пустым"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Label Grid.Row="1" Grid.Column="0" Content="Data Trigger TextBox:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DataTriggerTextBox" 
                 IsEnabled="{Binding IsEnabled}" Text="Data Trigger Demo" Margin="5">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="Opacity" Value="0.7"/>
                            <Setter Property="ToolTip" Value="Элемент отключен"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Label Grid.Row="2" Grid.Column="0" Content="Event Trigger Button:"/>
        <Button Grid.Row="2" Grid.Column="1" x:Name="EventTriggerButton" 
                Content="Нажми меня" Margin="5">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1.0" To="0.5" Duration="0:0:0.3"
                                             AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Label Grid.Row="3" Grid.Column="0" Content="MultiTrigger TextBox:"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="MultiTriggerTextBox" 
                 Text="{Binding Value, StringFormat='Значение: {0}'}" Margin="5">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="True"/>
                                <Condition Property="Text" Value="Значение: 100"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="Gold"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Label Grid.Row="4" Grid.Column="0" Content="MultiDataTrigger CheckBox:"/>
        <CheckBox Grid.Row="4" Grid.Column="1" x:Name="MultiDataTriggerCheckBox"
                  Content="Включить триггер" IsChecked="{Binding IsEnabled}" Margin="5">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsEnabled}" Value="True"/>
                                <Condition Binding="{Binding Value}" Value="50"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Foreground" Value="Blue"/>
                            <Setter Property="FontStyle" Value="Italic"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </CheckBox.Style>
        </CheckBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                   TextWrapping="Wrap" TextAlignment="Center">
            <Run Text="PropertyTrigger: реагирует на свойство UI элемента"/><LineBreak/>
            <Run Text="DataTrigger: реагирует на свойство данных (Binding)"/><LineBreak/>
            <Run Text="EventTrigger: реагирует на событие"/><LineBreak/>
            <Run Text="MultiTrigger/MultiDataTrigger: несколько условий"/>
        </TextBlock>
    </Grid>
</UserControl>
