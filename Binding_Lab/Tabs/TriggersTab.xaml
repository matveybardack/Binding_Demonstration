<UserControl x:Class="Binding_Lab.Tabs.TriggersTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Lab.Tabs"
             xmlns:vm="clr-namespace:Binding_Lab.ViewModels"
             xmlns:loc="clr-namespace:CodingSeb.Localization.WPF;assembly=CodingSeb.Localization.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UniformGrid Margin="10" Rows="7" Columns="4">
        <!-- Default UpdateSourceTrigger (PropertyChanged для TextBox.Text) -->
        <Label Content="{loc:Tr 'TRlb1', DefaultText='Default Trigger TextBox:'}"/>
        <TextBox Text="{Binding DefaultTriggerText}" Margin="5" VerticalAlignment="Top"/>
        <Label Content="{loc:Tr 'TRllb1', DefaultText='Log Default:'}"/>
        <TextBlock Text="{Binding DefaultTriggerText}" Margin="5" VerticalAlignment="Top"/>

        <!-- PropertyChanged Trigger -->
        <Label Content="{loc:Tr 'TRlb2', DefaultText='PropertyChanged Trigger:'}"/>
        <TextBox Text="{Binding PropertyChangedText, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="5" VerticalAlignment="Top"/>
        <Label Content="{loc:Tr 'TRllb2', DefaultText='Log PropertyChanged:'}"/>
        <TextBlock Text="{Binding PropertyChangedText}" Margin="5" VerticalAlignment="Top"/>

        <!-- Explicit Trigger -->
        <Label Content="{loc:Tr 'TRlb3', DefaultText='Explicit Trigger TextBox:'}"/>
        <TextBox x:Name="ExplicitTextBox" Text="{Binding ExplicitText, UpdateSourceTrigger=Explicit}" 
                 Margin="5" VerticalAlignment="Top"/>
        <Label Content="{loc:Tr 'TRllb3', DefaultText='Log Explicit:'}"/>
        <TextBlock Text="{Binding ExplicitText}" Margin="5" VerticalAlignment="Top"/>

        <!-- LostFocus Trigger -->
        <Label Content="{loc:Tr 'TRlb4', DefaultText='LostFocus Trigger TextBox:'}"/>
        <TextBox Text="{Binding LostFocusText, UpdateSourceTrigger=LostFocus}" 
                 Margin="5" VerticalAlignment="Top"/>
        <Label Content="{loc:Tr 'TRllb4', DefaultText='Log LostFocus:'}"/>
        <TextBlock Text="{Binding LostFocusText}" Margin="5" VerticalAlignment="Top"/>

        <!-- Кнопка для Explicit триггера -->
        <Label Content="{loc:Tr 'TRlb5', DefaultText='Apply Explicit:'}"/>
        <Button Content="{loc:Tr 'TRbtn1', DefaultText='Применить'}" 
                Click="ApplyExplicitButton_Click" 
                Margin="5" VerticalAlignment="Top"/>

        <!-- Slider для демонстрации PropertyChanged -->
        <Label Content="{loc:Tr 'TRlb6', DefaultText='Slider (PropertyChanged):'}"/>
        <Slider Value="{Binding SliderValue, UpdateSourceTrigger=PropertyChanged}" 
                Minimum="0" Maximum="100" Margin="5" VerticalAlignment="Top"/>
        <Label Content="{loc:Tr 'TRllb5', DefaultText='Log Slider:'}"/>
        <TextBlock Text="{Binding SliderValue, StringFormat='{}{0:F1}'}" 
                   Margin="5" VerticalAlignment="Top"/>

        <!-- CheckBox с LostFocus -->
        <Label Content="{loc:Tr 'TRlb7', DefaultText='CheckBox (LostFocus):'}"/>
        <CheckBox IsChecked="{Binding CheckBoxValue, UpdateSourceTrigger=LostFocus}" 
                  Content="{loc:Tr 'TRchb1', DefaultText='Отметь меня'}" 
                  Margin="5" VerticalAlignment="Top"/>
        <Label Content="{loc:Tr 'TRllb6', DefaultText='Log CheckBox:'}"/>
        <TextBlock Text="{Binding CheckBoxValue}" Margin="5" VerticalAlignment="Top"/>
    </UniformGrid>
</UserControl>