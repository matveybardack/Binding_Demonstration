<UserControl x:Class="Binding_Lab.Tabs.TwoWaysBindingTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Binding_Lab.Tabs"
             xmlns:vm="clr-namespace:Binding_Lab.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UniformGrid Margin="10" Rows="4" Columns="4">
        <!--Привязка textbox (TwoWay)-->
        <Label Content="TwoWay TextBox 1:"/>
        <TextBox Text="{Binding TwoWayText, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalAlignment="Top"/>
        <Label Content="Log TextBox 1:"/>
        <TextBox Text="{Binding TwoWayText, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalAlignment="Top"/>

        <!-- Привязка CheckBox (TwoWay)-->
        <Label Content="TwoWayCheckBox:"/>
        <CheckBox IsChecked="{Binding TwoWayFlag}" Content="Check me" Margin="5" VerticalAlignment="Top"/>
        <Label Content="Log TwoWayCheckBox:"/>
        <CheckBox IsChecked="{Binding TwoWayFlag}" Content="I`m checked?" Margin="5" VerticalAlignment="Top"/>
        
        <!-- Привязка Slider (TwoWay)-->
        <Label Content="TwoWay Slider:"/>
        <TextBox Text="{Binding TwoWayValue, UpdateSourceTrigger=PropertyChanged}" Margin="5" VerticalAlignment="Top"/>
        <Label Content="Slider:"/>
        <Slider Value="{Binding TwoWayValue, UpdateSourceTrigger=PropertyChanged}" Height="20" Margin="5" VerticalAlignment="Top" Maximum="100"/>
    </UniformGrid>
</UserControl>
